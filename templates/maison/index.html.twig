{% extends 'base.html.twig' %}

{% block title %}Maison index{% endblock %}

{% block body %}
    <h1>Maison index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prix</th>
                <th>Loue</th>
                <th>Etage</th>
                <th>Clima</th>
                <th>CreateAt</th>
                <th>UpdateAt</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for maison in maisons %}
            <tr>
                <td>{{ maison.id }}</td>
                <td>{{ maison.prix }}</td>
                <td>{{ maison.loue ? 'Yes' : 'No' }}</td>
                <td>{{ maison.etage }}</td>
                <td>{{ maison.clima ? 'Yes' : 'No' }}</td>
                <td>{{ maison.createAt ? maison.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ maison.updateAt ? maison.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ maison.image }}</td>
                <td>
                    <a href="{{ path('maison_show', {'id': maison.id}) }}">show</a>
                    <a href="{{ path('maison_edit', {'id': maison.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('maison_new') }}">Create new</a>
{% endblock %}
